<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- 普通JDBC连接，取代 hiberbnate.cfg.xml -->
	<bean id="candy" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName"
			value="com.microsoft.sqlserver.jdbc.SQLServerDriver">
		</property>
		<property name="url"
			value="jdbc:sqlserver://localhost:1433;DatabaseName=question">
		</property>
		<property name="username" value="sa"></property>
		<property name="password" value="872081258"></property>
	</bean>

	<!-- 取代HiberbnateSessionFactory.java -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<!-- 设置注入 -->
		<property name="dataSource">
			<ref bean="candy" />
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.SQLServerDialect
				</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.format_sql">true</prop>
				<prop key="hibernate.use_sql_comments">true</prop>
			</props>
		</property>
		<property name="mappingResources">
			<list>
				<value>com/question/USER0000/model/USER0000.hbm.xml</value>
			</list>
		</property>
	</bean>
	<bean id="USER0000Daoimpl" class="com.question.USER0000.dao.impl.USER0000DaoImpl" abstract="false"
		lazy-init="default" autowire="default" dependency-check="default">
		<!-- 设置注入sessionFactory -->
		<property name="sessionFactory" >
			<ref local="sessionFactory"/>
		</property>
	</bean>
</beans>